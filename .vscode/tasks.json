{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "AtCoder",
            "type": "shell",
            "command": "clang++",
            "args":[
                "-std=gnu++1z",
                "-O3",
                "src/main.cpp",
                "-o",
                "src/main",
                "--debug"   
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}